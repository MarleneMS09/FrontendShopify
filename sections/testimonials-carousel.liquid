{% comment %}
Section for Testimonials Carousel
{% endcomment %}

<<div class="testimonials-carousel">
  <div class="testimonials-carousel__container">
    {% for block in section.blocks %}
      <div class="testimonial">
        <div class="testimonial__quote">{{ block.settings.quote }}</div>
        <div class="testimonial__author">{{ block.settings.author }}</div>
      </div>
    {% endfor %}
  </div>

  <!-- Carousel Navigation -->
  <div class="testimonials-carousel__nav">
    <button class="prev">Previous</button>
    <button class="next">Next</button>
  </div>
</div>

<style>
  .testimonials-carousel {
    position: relative;
    overflow: hidden;
  }
  .testimonials-carousel__container {
    display: flex;
    transition: transform 0.3s ease-in-out;
  }
  .testimonial {
    flex: 0 0 100%;
    padding: 20px;
    box-sizing: border-box;
  }
  .testimonials-carousel__nav {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
  }
  .testimonials-carousel__nav button {
    background-color: #000;
    color: #fff;
    border: none;
    padding: 10px;
    cursor: pointer;
  }
</style>
{% schema %}
{
  "name": "Testimonials Carousel",
  "settings": [],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "quote",
          "label": "Quote",
          "default": "This is a great product!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John Doe"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
